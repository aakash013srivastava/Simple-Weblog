<% include partials/header %>

<h1>Post Article</h1>

<div class="alert alert-danger" id="messages"><%= message %></div>


<form method="POST" action="/post_article">

    <label for="title">Title</label><br>
    <input type="text" name="title" title="3 or more characters and digits" pattern="[A-Za-z0-9\s]{3,}" required/><br><br>
    <label for="article_text">Body</label><br>
    <!-- Create a tag that we will use as the editable area. -->
    <!-- You can use a div tag as well. -->
    <textarea name="article_text" id="article_text" required></textarea><br><br>
    <input type="submit" name="submit" value="Submit" class="btn btn-primary">

</form>

<!-- Initialize the editor. -->
<script>
    $(function() {
        $('#article_text').froalaEditor({
            pastePlain: true
        })
    });
</script> 
      

<% include partials/footer %>